package database.access.tableobject;

public class UserInfoTuple extends DatabaseTable {			
	public UserInfoTuple(){
		super();
		this.setTableName(UserInfoTableEnum.TABLE_NAME.asText());
	}	
	public void addUsername(String newUsername){ // *** Create abstraction for all objects (i.e, UserId)?
		String formStrUsername = this.formatStringAttr(newUsername);
		this.addAttribute(UserInfoTableEnum.USERNAME.asText(), formStrUsername);		
	}
	public void addPassword(String newUserPassword){		
		String formStrPassword = this.formatStringAttr(newUserPassword);
		this.addAttribute(UserInfoTableEnum.PASSWORD.asText(), formStrPassword);
	}	
	public void addFirstName(String newFirstName){
		String formStrFName = this.formatStringAttr(newFirstName);
		this.addAttribute(UserInfoTableEnum.FIRSTNAME.asText(), formStrFName);
	}	
	public void addLastName(String newLastName){
		String formStrLName = this.formatStringAttr(newLastName);
		this.addAttribute(UserInfoTableEnum.LASTNAME.asText(), formStrLName);
	}	
	public void addEmail(String newEmail){
		String formStrEmail = this.formatStringAttr(newEmail);
		this.addAttribute(UserInfoTableEnum.EMAIL.asText(), formStrEmail);
	}
	public void addStreetNum(String newStreetNum){
		this.addAttribute(UserInfoTableEnum.STREET_NUM.asText(), newStreetNum);
	}
}
