package database.access.facade;

import java.sql.PreparedStatement;
import java.util.HashMap;

import database.access.dataobject.AbstractTable;

public class QueryBuilder {
	public static String constructInsert(AbstractTable table){
		try{
			String tableName = table.getTableName();
			String attributeNames = " ( ";
			String attributeValues = " ( ";			
			String[] attrList = (String[]) table.getAttributeMap().keySet().toArray();
			HashMap<String, String> attributeCollection = table.getAttributeMap();

			String insert_statement = 
					"INSERT INTO " + tableName; 											
					
			for(HashMap<String, String> attribute: attributeCollection){
				attributeNames += attribute + ", ";
				attributeValues += attributeCollection.get(attribute);
			}
			//Use loop here to construct query. Only use one loop!
			//Construct both attributes and value list in at one time
		}catch(Exception e){
			
		}
	}
}
