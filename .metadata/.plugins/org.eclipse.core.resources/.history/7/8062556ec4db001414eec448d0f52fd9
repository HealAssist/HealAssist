package healassist.service.response;

import javax.json.Json;
import javax.json.JsonObject;
import javax.json.JsonValue;

public class JsonFeedbackResponse {
	private static final String SUCCESS = "success";	
	
	public static String success(){
		JsonObject job = Json.createObjectBuilder().add(SUCCESS, JsonValue.TRUE).build();
		return job.toString();
	}
	
	public static String failure(){
		JsonObject job = Json.createObjectBuilder().add(SUCCESS, JsonValue.FALSE).build();
		return job.toString();
	}
}
