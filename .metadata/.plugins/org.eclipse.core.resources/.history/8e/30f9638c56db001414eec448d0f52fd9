package database.access.facade;

import java.sql.Connection;
import java.sql.Statement;

import database.access.dataobject.AbstractTable;

public class DatabaseInterface {	
	public Boolean insert(AbstractTable table){
		try(Connection conn = DatabaseConnection.getConnection();){ //Do try with resources to open connection
			if(table instanceof AbstractTable){
				String insertString = QueryBuilder.constructInsert(table);
				Statement stmt = conn.createStatement();
				stmt.execute(insertString);
				return true;
			}else{
				return false;
			}
		}catch(Exception e){
			System.out.println(e);
			return null;
		}
	}
}
