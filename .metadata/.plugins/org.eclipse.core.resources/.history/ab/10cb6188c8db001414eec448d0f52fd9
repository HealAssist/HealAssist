package healassist.service.response;

import javax.json.Json;
import javax.json.JsonObject;
import javax.json.JsonValue;

public class JsonFeedbackResponse {
	private static final String WAS_SUCCESS = "wasSuccess";	
	private static final String ERROR = "error";
	
	public static String success(){
		return (BuildJson(WAS_SUCCESS, JsonValue.TRUE)).toString();
	}
	
	public static String failure(){		
		return (BuildJson(WAS_SUCCESS, JsonValue.FALSE)).toString();
	}	
	
	public static String error(String errorMessage){
		return (BuildJson(ERROR, errorMessage)).toString();
	}
	
	public static String serverErrorMessage(String projectName, String className,
			String functionName, String errorCause){
		
	}
	
	private static JsonObject BuildJson(String key, JsonValue value){
		return Json.createObjectBuilder().add(key, value).build();
	}
	
	private static JsonObject BuildJson(String key, String value){
		return Json.createObjectBuilder().add(key, value).build();
	}
}
